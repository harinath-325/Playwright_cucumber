{ 
    "default": {
        "paths": [
            "tests/features/"
        ], 
        "dryRun": false,
        "format": [
            "progress-bar",
            "summary",
            "json:reports/cucumber-report.json", 
            "html:reports/cucumber-report.html",
            "@cucumber/pretty-formatter"
        ],
        "formatOptions": {
            "colorsEnabled": true,
            "snippetInterface": "async-await"
        },
        "require": [
            "tests/steps/*.ts"
        ],
        "requireModule":[
            "ts-node/register"
        ]

    }
}
   


   